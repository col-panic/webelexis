{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "experimentalDecorators":true,
    "sourceMap": true,
    "declaration": true,
    "preserveConstEnums": true,
    "removeComments":false
  },
  "include": [
    "models/*.ts",
    "test/*.ts",
    "common/**/*.ts",
    "services/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}