.row(if.bind="counts['remarks']>0" style="position:relative;")
  require(from="../../components/flag-view")
  .col.s12
    h4(t="dashboard.remarks") Test
    .fixed-action-btn.horizontal(style="position:absolute;display:inline-block;right:10px;top:5px")
      a.red(md-button="floating: true" md-waves="color:light; circle:true;")
        i.material-icons menu
      ul
        li
          .black(md-button="floating:true;" click.delegate="lockToggle()")
            i.fa.fa-lock(if.bind="isLocked")
            i.fa.fa-unlock(if.bind="!isLocked")
        li
          .blue(md-button="floating:true;" if.bind="!isLocked" click.delegate="newFlag()")
            i.fa.fa-plus

  .col.s12.m6.l4(repeat.for="rem of remarks.values")
    flag-view(flag.bind="rem")

.row(if.bind="counts['remarks']==0")
  .col.s12
    <p>Keine Bemerkungen</p>