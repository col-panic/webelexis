template
  <require from="components/searchfield"></require>
  <require from="resources/fhir-resource-value-converter"></require>

  h4.accent-text.center-align ${officeName}
  .row
    .col.s12.m6
      md-card(md-title="Agenda" style="height:15rem")
        select(md-select="" value.bind="selectedActor")
          option(model.bind="actor" repeat.for="actor of actors") ${actor.shortLabel}


        input(md-datepicker="container: body; value.two-way: selectedDate; options.bind:agendaD;" type="date" placeholder="WÃ¤hlen Sie ein Datum")

    .col.s12.m6
      md-card(md-title="Patient" style="height:5rem;")
        form(role="form" submit.delegate="doSearch()")
          searchfield(value.two-way="searchexpr")
        md-collection
          md-collection-item(repeat.for="patient of patients")
            a(route-href="route: searchbox-details; params.bind: {id: patient.id}")
             | ${patient.fhir.name[0].given | fhirResource:'name[0].given':patient.fhir}
             | ${patient.fhir.name[0].family | fhirResource: 'name[0].family':patient.fhir} (${patient.gender}), ${patient.birthDate}

